<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#757575"
    tools:context=".fragments.fragments.FragmentLeo2">

    <TextView
        android:id="@+id/titDatosleo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#D7CCC8"
        android:textAllCaps="true"
        android:gravity="center"
        android:text="Datos Geograficos"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        />

    <EditText
        android:id="@+id/CiudadDatosLeo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="coro"
        android:hint="Ciudad"
        android:textSize="20sp"
        android:padding="15dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@id/titDatosleo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/estadoDatosLeo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:text="falcon"
        android:textColor="@color/white"
        android:hint="Estado"
        android:textSize="20sp"
        android:padding="15dp"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@id/CiudadDatosLeo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/DireccionDatosLeo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:text="prado"
        android:hint="Direccion"
        android:textSize="20sp"
        android:padding="15dp"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@id/estadoDatosLeo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFrag3leo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#009688"
        android:text="Siguiente"
        android:textSize="25sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/DireccionDatosLeo"
        android:padding="15dp"
        android:layout_margin="25dp"
        app:layout_constraintVertical_bias="0.885" />

</androidx.constraintlayout.widget.ConstraintLayout>